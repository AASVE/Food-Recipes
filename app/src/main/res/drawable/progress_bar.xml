<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-90"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="270">

    <shape
        android:shape="ring"
        android:useLevel="false">

        <gradient
            android:centerColor="@color/colorBtnSource"
            android:centerX="0.4"
            android:endColor="@color/colorText"
            android:gradientRadius="@integer/google_play_services_version"
            android:startColor="#40FFFFFF"
            android:type="sweep"
            android:useLevel="false" />

    </shape>

</rotate>